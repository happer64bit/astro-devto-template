---
const { title, cover_image } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#17181c] text-[#fefefe]">
    <div>
      <div class="mt-10">
        {cover_image != null && (
            <img
              src={cover_image}
              alt={title}
              class="w-full h-auto mb-4 rounded-lg max-w-[800px] mx-auto p-4"
            />
        )}
      </div>
      <div>
        <slot />
      </div>
    </div>
  </body>
</html>
